<header id="header" class="header d-flex align-items-center sticky-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center">
        <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto">
            <img src="~/assets/img/eSaysay-logo.png" alt="eSaysay-logo">
            <h1 class="sitename">eSaysay</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                @{
                    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                }
                <li><a asp-controller="Home" asp-action="Index" class="@(currentAction == "Index" ? "active" : "")">Home</a></li>
                <li><a asp-controller="Home" asp-action="About" class="@(currentAction == "About" ? "active" : "")">About</a></li>
                <li><a asp-controller="Home" asp-action="Contact" class="@(currentAction == "Contact" ? "active" : "")">Contact</a></li>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>
        <a class="btn-login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn-getstarted" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
    </div>
</header>