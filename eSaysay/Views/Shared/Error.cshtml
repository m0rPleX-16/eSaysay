@model ErrorViewModel
@{
    ViewData["Title"] = "Oops! Something went wrong";
}

<div class="container text-center mt-5">
    <h1 class="text-danger display-4">Oops! An Error Occurred</h1>
    <p class="lead">We encountered an issue while processing your request.</p>

    <img src="/images/error-illustration.svg" alt="Error Illustration" class="img-fluid" width="400">

    @if (Model.ShowRequestId)
    {
        <p class="mt-3">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <div class="alert alert-warning mt-3">
        <h4>Need Help?</h4>
        <p>If the problem persists, feel free to reach out to our support team.</p>
        <a href="/ContactSupport" class="btn btn-outline-primary">Contact Support</a>
    </div>

    <h3 class="mt-4">Troubleshooting Tips</h3>
    <ul class="text-start mx-auto" style="max-width: 600px;">
        <li>Try refreshing the page.</li>
        <li>Ensure your internet connection is stable.</li>
        <li>Clear your browser cache and try again.</li>
        <li>Return to the <a href="/">home page</a> and navigate again.</li>
    </ul>

    <p class="mt-4 text-muted">For system administrators: Enable <strong>Development</strong> mode to view more details about this error.</p>
</div>
