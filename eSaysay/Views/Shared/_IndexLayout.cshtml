@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - eSaysay</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Poppins:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">
    <link href="~/assets/css/sidebar.css" rel="stylesheet">
    <link href="~/assets/css/dashboard.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body class="index-page">

    @if (User.Identity.IsAuthenticated)
    {
        <header id="header" class="header d-flex align-items-center sticky-top">
            <div class="container-fluid container-xl position-relative d-flex align-items-center">
                <a asp-controller="Dashboard" asp-action="Index" class="logo d-flex align-items-center me-auto">
                    <img src="~/assets/img/eSaysay-logo.png" alt="eSaysay-logo">
                    <h1 class="sitename">eSaysay</h1>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a asp-controller="Dashboard" asp-action="Index" class="active">Dashboard</a></li>
                        <li><a asp-controller="Dashboard" asp-action="Profile">Profile</a></li>
                        <li><a asp-controller="Dashboard" asp-action="Settings">Settings</a></li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                        </li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn-getstarted border-0">Logout</button>
                </form>
            </div>
        </header>

        <main class="main">
            @RenderBody()
        </main>

        <footer id="footer" style="text-align-center">
            <p>© <span>Copyright | </span> <strong class="px-1 sitename">eSaysay: A Language Learning System</strong> <span> | All Rights Reserved</span></p>
        </footer>

        <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <!-- Preloader -->
        <div id="preloader"></div>

    }
    else
    {
        <header id="header" class="header d-flex align-items-center sticky-top">
            <div class="container-fluid container-xl position-relative d-flex align-items-center">
                <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto">
                    <img src="~/assets/img/eSaysay-logo.png" alt="eSaysay-logo">
                    <h1 class="sitename">eSaysay</h1>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index" class="active">Home</a></li>
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Courses" asp-action="Index">Courses</a></li>
                        <li><a asp-controller="Events" asp-action="Index">Events</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>
                <a class="btn-getstarted" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
                <a class="btn-getstarted" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </div>
        </header>

        <main class="main">
            @RenderBody()
        </main>

        <footer id="footer" class="footer position-relative light-background">
            <div class="container footer-top">
                <div class="row gy-4">
                    <div class="col-lg-4 col-md-6 footer-about">
                        <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                            <span class="sitename">eSaysay</span>
                        </a>
                        <div class="footer-contact pt-3">
                            <p>123 Learning Avenue</p>
                            <p>Manila, Philippines 1008</p>
                            <p class="mt-3"><strong>Phone:</strong> <span>+63 912 345 6789</span></p>
                            <p><strong>Email:</strong> <span>support@esaysay.com</span></p>
                        </div>
                        <div class="social-links d-flex mt-4">
                            <a href="https://twitter.com/esaysay" target="_blank"><i class="bi bi-twitter-x"></i></a>
                            <a href="https://facebook.com/esaysay" target="_blank"><i class="bi bi-facebook"></i></a>
                            <a href="https://instagram.com/esaysay" target="_blank"><i class="bi bi-instagram"></i></a>
                            <a href="https://linkedin.com/company/esaysay" target="_blank"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 footer-links">
                        <h4>Quick Links</h4>
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                            <li><a asp-controller="Courses" asp-action="Index">Courses</a></li>
                            <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                            <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-2 col-md-3 footer-links">
                        <h4>Language Learning</h4>
                        <ul>
                            <li><a asp-controller="Courses" asp-action="Index">English</a></li>
                            <li><a asp-controller="Courses" asp-action="Index">Spanish</a></li>
                            <li><a asp-controller="Courses" asp-action="Index">Japanese</a></li>
                            <li><a asp-controller="Courses" asp-action="Index">French</a></li>
                            <li><a asp-controller="Courses" asp-action="Index">Mandarin</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-12 footer-newsletter">
                        <h4>Join Our Newsletter</h4>
                        <p>Subscribe to get updates on new courses, learning tips, and exclusive offers!</p>
                        <form action="#" method="post">
                            <div class="newsletter-form">
                                <input type="email" name="email" placeholder="Enter your email" required>
                                <input type="submit" value="Subscribe">
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="container copyright text-center mt-4">
                <p>© <span>Copyright | </span> <strong class="px-1 sitename">eSaysay: A Language Learning System</strong> <span> | All Rights Reserved</span></p>
                <div class="credits">
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a> | Customized for <strong>eSaysay</strong>
                </div>
            </div>

        </footer>

        <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <!-- Preloader -->
        <div id="preloader"></div>

    }

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>
    <script src="~/assets/js/script.js"></script>
</body>
</html>
