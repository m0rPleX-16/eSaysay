@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - eSaysay</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link href="~/assets/img/eSaysay-logo.png" rel="icon">
    <link href="~/assets/img/eSaysay-logo.png" rel="eSaysay-logo">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Poppins:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet">
    <link href="~/assets/css/sidebar.css" rel="stylesheet">
    <link href="~/assets/css/dashboard.css" rel="stylesheet">
    <link href="~/assets/css/css_exercises/listening.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body class="index-page @(ViewData["PageClass"])">

    @if (User.IsInRole("Admin"))
    {
        <main class="main">
            <div class="wrapper">
                <!-- Sidebar -->
                <nav id="sidebar" class="active">
                    @await Html.PartialAsync("_AdminSidebar")
                </nav>
                @RenderBody()
            </div>
        </main>

        <footer id="footer" class="footer-dash">
            <div class="footer-container">
                <p>© <span>Copyright | </span> <strong class="px-1 sitename">eSaysay: A Language Learning System</strong> <span> | All Rights Reserved</span></p>
            </div>
        </footer>

        <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <!-- Chart.js -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            // User Growth Chart
            var ctx1 = document.getElementById('userGrowthChart').getContext('2d');
            var userGrowthChart = new Chart(ctx1, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'New Users',
                        data: [10, 20, 30, 40, 50, 60],
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true
                }
            });

            // Posts & Comments Chart
            var ctx2 = document.getElementById('postsCommentsChart').getContext('2d');
            var postsCommentsChart = new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [
                        {
                            label: 'Posts',
                            data: [5, 10, 15, 20, 25, 30],
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 2
                        },
                        {
                            label: 'Comments',
                            data: [8, 16, 24, 32, 40, 48],
                            backgroundColor: 'rgba(255, 206, 86, 0.2)',
                            borderColor: 'rgba(255, 206, 86, 1)',
                            borderWidth: 2
                        }
                    ]
                },
                options: {
                    responsive: true
                }
            });

            // Storage Usage Chart
            var ctx3 = document.getElementById('storageChart').getContext('2d');
            var storageChart = new Chart(ctx3, {
                type: 'doughnut',
                data: {
                    labels: ['Used Space', 'Free Space'],
                    datasets: [{
                        data: [70, 30],
                        backgroundColor: ['#FF6384', '#36A2EB']
                    }]
                },
                options: {
                    responsive: true
                }
            });
        </script>

    }
    else if (User.IsInRole("Student"))
    {
        @await Html.PartialAsync("_NavbarAuthenticated")

        <main class="main">
            @RenderBody()
        </main>

        <footer id="footer" class="footer-dash">
            <div class="footer-container">
                <p>© <span>Copyright | </span> <strong class="px-1 sitename">eSaysay: A Language Learning System</strong> <span> | All Rights Reserved</span></p>
            </div>
        </footer>

        <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <!-- Preloader -->
        <div id="preloader"></div>
    }
    else
    {
        @await Html.PartialAsync("_NavbarUnauthenticated")

        <main class="main">
            @RenderBody()
        </main>

        <footer id="footer-hero" class="footer-hero position-relative light-background">
            <div class="container footer-top">
                <div class="row gy-4">
                    <div class="col-lg-4 col-md-6 footer-about">
                        <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                            <span class="sitename">eSaysay</span>
                        </a>
                        <div class="footer-contact pt-3">
                            <p>123 Learning Avenue</p>
                            <p>Manila, Philippines 1008</p>
                            <p class="mt-3"><strong>Phone:</strong> <span>+63 912 345 6789</span></p>
                            <p><strong>Email:</strong> <span>support@esaysay.com</span></p>
                        </div>
                        <div class="social-links d-flex mt-4">
                            <a href="https://twitter.com/esaysay" target="_blank"><i class="bi bi-twitter-x"></i></a>
                            <a href="https://facebook.com/esaysay" target="_blank"><i class="bi bi-facebook"></i></a>
                            <a href="https://instagram.com/esaysay" target="_blank"><i class="bi bi-instagram"></i></a>
                            <a href="https://linkedin.com/company/esaysay" target="_blank"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>

                    <div class="col-lg-2 col-md-3 footer-links">
                        <h4>Quick Links</h4>
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                            <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                            <li><a asp-area="Identity" asp-page="/Account/AdminLogin">Go to Admin</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-2 col-md-3 footer-links">
                        <h4>Language Learning</h4>
                        <ul>
                            <li><a asp-controller="Courses" asp-action="Index">English</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-4 col-md-12 footer-newsletter">
                        <h4>Join Our Newsletter</h4>
                        <p>Subscribe to get updates on new courses, learning tips, and exclusive offers!</p>
                        <form action="#" method="post">
                            <div class="newsletter-form">
                                <input type="email" name="email" placeholder="Enter your email" required>
                                <input type="submit" value="Subscribe">
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="container copyright text-center mt-4">
                <p>© <span>Copyright | </span> <strong class="px-1 sitename">eSaysay: A Language Learning System</strong> <span> | All Rights Reserved</span></p>
                <div class="credits">
                    Designed by <a href="https://openai.com/">OpenAi</a> | Customized for <strong>eSaysay</strong>
                </div>
            </div>

        </footer>

        <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <!-- Preloader -->
        <div id="preloader"></div>

    }

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>
    <script src="~/assets/js/script.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
