@using Microsoft.AspNetCore.Identity;

<aside class="sidebar">
    <!-- Sidebar header -->
    <header class="sidebar-header">
        <a href="#" class="header-logo">
            <img src="~/assets/img/eSaysay-logo.png" alt="eSaysay">
        </a>
        <button class="toggler sidebar-toggler">
            <span class="material-symbols-rounded">chevron_left</span>
        </button>
        <button class="toggler menu-toggler">
            <span class="material-symbols-rounded">menu</span>
        </button>
    </header>

    <!-- User Profile Section -->
    <div class="user-profile">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="profile-info">
                <img src="~/assets/img/default-profile.png" alt="Profile Picture" class="profile-picture" />
                <div class="profile-details">
                    <p class="username">@User.Identity.Name</p>
                    <p class="user-role">@(User.IsInRole("Student") ? "Student" : "Admin")</p>
                </div>
            </div>
        }
        else
        {
            <div class="profile-info">
                <img src="~/assets/img/default-profile.png" alt="Profile Picture" class="profile-picture" />
                <div class="profile-details">
                    <p class="username">Guest</p>
                    <p class="user-role">Not Logged In</p>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar Navigation -->
    <nav class="sidebar-nav">
        <!-- Primary Top Nav -->
        <ul class="nav-list primary-nav">
            <p id="sidebar-title">Your Journey</p>
            <li class="class-item">
                <a href="#" class="nav-link">
                    <span class="nav-icon material-symbols-rounded">book_5</span>
                    <span class="nav-label">Learn</span>
                </a>
            </li>
            <li class="class-item">
                <a href="#" class="nav-link">
                    <span class="nav-icon material-symbols-rounded">book_ribbon</span>
                    <span class="nav-label">Practice</span>
                </a>
            </li>
            <p id="sidebar-title">Settings</p>
            <li class="class-item">
                <a href="#" class="nav-link">
                    <span class="nav-icon material-symbols-rounded">account_circle</span>
                    <span class="nav-label">Profile</span>
                </a>
            </li>
        </ul>
        <!--Secondary bottom nav-->
        <ul class="nav-list secondary-nav">
                <form class="class-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                    <button type="submit" class="btn-logout nav-link">
                        <span class="nav-icon material-symbols-rounded"> logout </span>
                        <span class="nav-label">Logout</span>
                    </button>
                </form>
         
        </ul>
    </nav>
</aside>