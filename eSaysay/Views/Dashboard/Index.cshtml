@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">

        <!-- Main Content -->
        <div class="col-md-10 p-4">
            <h1>Welcome to Your Dashboard</h1>
            <p>This is your main panel where you can manage your learning progress.</p>

            <!-- Beginner Lessons Section -->
            <section class="lesson-section mt-4">
                <h4 class="lesson-title">Beginner Lessons</h4>
                <div class="row">
                    <div class="col text-right">
                        <h5>0/5</h5>
                    </div>
                </div>
                <div class="lesson-cards d-flex overflow-auto">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <div class="card m-2 p-3">
                            <h3>Lesson @i</h3>
                            <p>Introduction to basic phrases</p>
                            <button class="btn btn-primary" onclick="location.href='#'">Start Lesson</button>
                        </div>
                    }
                </div>
            </section>

            <!-- Intermediate Lessons Section -->
            <section class="lesson-section mt-4">
                <h4 class="lesson-title">Intermediate Lessons</h4>
                <div class="row">
                    <div class="col text-right">
                        <h5>0/2</h5>
                    </div>
                </div>
                <div class="lesson-cards d-flex overflow-auto">
                    @for (int i = 1; i <= 2; i++)
                    {
                        <div class="card m-2 p-3">
                            <h3>Lesson @i</h3>
                            <p>Intermediate phrases</p>
                            <button class="btn btn-primary" onclick="location.href='#'">Start Lesson</button>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>
