@{
    ViewData["Title"] = "Dashboard";
}
<!-- Dashboard Content of User-->
<div class="user-dashboard">

    @await Html.PartialAsync("_Sidebar")

    <main class="main-content user-dashboard">
        <div>
            <h1>Welcome to Your Dashboard</h1>
            <p>This is your main panel where you can manage your learning progress.</p>
        </div>
        <section class="lesson-section">
            <div class="carousel">
                <div class="lessons-title row">
                    <div class="col text-left">
                        <h4 class="lesson-title mt-3">Beginner Lessons</h4>
                    </div>
                    <div class="col text-right">
                        <h5 class="mt-3">0/5</h5>
                    </div>
                </div>
                <button class="carousel-control prev">&#10094;</button>
                <div class="lesson-cards">
                    <div class="lesson-card">
                        <h3>Lesson 1</h3>
                        <p>Intro w Listening exercises</p>
                        <a asp-controller="Dashboard" asp-action="ListeningExercise" class="btn btn-primary">Start</a>
                    </div>
                    <div class="lesson-card">
                        <h3>Lesson 2</h3>
                        <p>Correct Translation</p>
                        <a asp-controller="Dashboard" asp-action="CorrectTranslation" class="btn btn-primary">Start</a>
 
                    </div>
                    <div class="lesson-card">
                        <h3>Lesson 3</h3>
                        <p>Complete d transl</p>
                        <a asp-controller="Dashboard" asp-action="CompleteTranslation" class="btn btn-primary">Start</a>
                    </div>
                    <div class="lesson-card">
                        <h3>Lesson 4</h3>
                        <p>match the right pair</p>
                        <a asp-controller="Dashboard" asp-action="PairingExercise" class="btn btn-primary">Start</a>
                    </div>
                    <div class="lesson-card">
                        <h3>Lesson 5</h3>
                        <p>Basic greetings</p>
                        <button onclick="location.href='#'">Start Lesson</button>
                    </div>
                </div>
                <button class="carousel-control next">&#10095;</button>
            </div>
        </section>
        <section class="lesson-section">
            <div class="carousel">
                <div class="lessons-title row">
                    <div class="col text-left">
                        <h4 class="lesson-title mt-3">Intermediate Lessons</h4>
                    </div>
                    <div class="col text-right">
                        <h5 class="mt-3">0/2</h5>
                    </div>
                </div>
                <button class="carousel-control prev">&#10094;</button>
                <div class="lesson-cards">
                    <div class="lesson-card">
                        <h3>Lesson 1</h3>
                        <p>Intermediate phrases</p>
                        <button onclick="location.href='#'">Start Lesson</button>
                    </div>
                    <div class="lesson-card">
                        <h3>Lesson 2</h3>
                        <p>Conversational practice</p>
                        <button onclick="location.href='#'">Start Lesson</button>
                    </div>
                </div>
                <button class="carousel-control next">&#10095;</button>
            </div>
        </section>
        <!-- Add more sections for advanced lessons if needed -->
    </main>

    <footer id="footer" class="footer-dash">
        <div class="footer-container">
            <p>© <span>Copyright | </span> <strong class="px-1 sitename">eSaysay: A Language Learning System</strong> <span> | All Rights Reserved</span></p>
        </div>
    </footer>

</div>
   
