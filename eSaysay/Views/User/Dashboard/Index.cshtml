@{
    ViewData["Title"] = "Dashboard";
}

<!-- Dashboard Content of User -->
<div class="user-dashboard">
    @await Html.PartialAsync("_Sidebar")

    <main class="main-content user-dashboard">
        @await Html.PartialAsync("_NavbarAuthenticated")
        <div>
            <h1>Welcome to Your Dashboard</h1>
            <p>This is your main panel where you can manage your learning progress.</p>
        </div>

        <!-- Beginner Lessons Section -->
        @if (ViewBag.BeginnerLessons != null && ViewBag.BeginnerLessons.Count > 0)
        {
            <section class="lesson-section">
                <div class="carousel">
                    <div class="lessons-title row">
                        <div class="col text-left">
                            <h4 class="lesson-title mt-3">Beginner Lessons</h4>
                        </div>
                        <div class="col text-right">
                            <h5 class="mt-3">@ViewBag.BeginnerLessons.Count / 5</h5>
                        </div>
                    </div>
                    <button class="carousel-control prev">&#10094;</button>
                    <div class="lesson-cards">
                        @foreach (var lesson in ViewBag.BeginnerLessons)
                        {
                            <div class="lesson-card">
                                <h3>@lesson.Title</h3>
                                <p>@lesson.Description</p>
                                <a asp-controller="Dashboard" asp-action="LessonDetails" asp-route-id="@lesson.LessonID" class="btn btn-primary">Start</a>
                            </div>
                        }
                    </div>
                    <button class="carousel-control next">&#10095;</button>
                </div>
            </section>
        }
        else
        {
            <p class="text-muted">No beginner lessons available.</p>
        }

        <!-- Intermediate Lessons Section -->
        @if (ViewBag.IntermediateLessons != null && ViewBag.IntermediateLessons.Count > 0)
        {
            <section class="lesson-section">
                <div class="carousel">
                    <div class="lessons-title row">
                        <div class="col text-left">
                            <h4 class="lesson-title mt-3">Intermediate Difficulty</h4>
                        </div>
                        <div class="col text-right">
                            <h5 class="mt-3">@ViewBag.IntermediateLessons.Count / 2</h5>
                        </div>
                    </div>
                    <button class="carousel-control prev">&#10094;</button>
                    <div class="lesson-cards">
                        @foreach (var lesson in ViewBag.IntermediateLessons)
                        {
                            <div class="lesson-card">
                                <h3>@lesson.Title</h3>
                                <p>@lesson.Description</p>
                                <a asp-controller="Dashboard" asp-action="LessonDetails" asp-route-id="@lesson.LessonID" class="btn btn-primary">Start</a>
                            </div>
                        }
                    </div>
                    <button class="carousel-control next">&#10095;</button>
                </div>
            </section>
        }
        else
        {
            <p class="text-muted">No intermediate lessons available.</p>
        }

        <!-- Advanced Lessons Section -->
        @if (ViewBag.AdvancedLessons != null && ViewBag.AdvancedLessons.Count > 0)
        {
            <section class="lesson-section">
                <div class="carousel">
                    <div class="lessons-title row">
                        <div class="col text-left">
                            <h4 class="lesson-title mt-3">Advanced Difficulty</h4>
                        </div>
                        <div class="col text-right">
                            <h5 class="mt-3">@ViewBag.AdvancedLessons.Count / 3</h5>
                        </div>
                    </div>
                    <button class="carousel-control prev">&#10094;</button>
                    <div class="lesson-cards">
                        @foreach (var lesson in ViewBag.AdvancedLessons)
                        {
                            <div class="lesson-card">
                                <h3>@lesson.Title</h3>
                                <p>@lesson.Description</p>
                                <a asp-controller="Dashboard" asp-action="LessonDetails" asp-route-id="@lesson.LessonID" class="btn btn-primary">Start</a>
                            </div>
                        }
                    </div>
                    <button class="carousel-control next">&#10095;</button>
                </div>
            </section>
        }
        else
        {
            <p class="text-muted">No advanced lessons available.</p>
        }
    </main>

    <footer id="footer" class="footer-dash">
        <div class="footer-container">
            <p>© <span>Copyright | </span> <strong class="px-1 sitename">eSaysay: A Language Learning System</strong> <span> | All Rights Reserved</span></p>
        </div>
    </footer>
</div>