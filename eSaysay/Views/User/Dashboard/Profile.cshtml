<h3>Earned Badges</h3>
<div>
    @foreach (var badge in Model.EarnedBadges)
    {
        <div>
            <strong>@badge.BadgeName</strong>
            <p>@badge.Description</p>
            <p>Earned on: @badge.DateEarned.ToString("MMMM dd, yyyy")</p>
        </div>
    }
</div>

<h3>Locked Badges</h3>
<div>
    @foreach (var badge in Model.UnearnedBadges)
    {
        <div>
            <strong>@badge.BadgeName</strong>
            <p>@badge.Description</p>
            <p><em>Locked</em></p>
        </div>
    }
</div>
