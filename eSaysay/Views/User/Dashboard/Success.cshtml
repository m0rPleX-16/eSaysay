@{
    ViewData["Title"] = "Success";
}

<div style="text-align: center; margin-top: 50px;">
    <h2>🎉 Success!</h2>
    <p>Your response has been saved successfully.</p>

    <div style="margin-top: 20px;">
        <a asp-controller="Dashboard" asp-action="Index" style="padding: 10px 20px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 5px;">
            Go to Dashboard
        </a>
    </div>
</div>

<style>
    .success-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
    }

    .success-message {
        margin-bottom: 2rem;
    }

        .success-message h2 {
            font-size: 2.5rem;
            color: #4CAF50; /* Green color for success */
        }

        .success-message p {
            font-size: 1.2rem;
            color: #333;
        }

    .success-actions {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #4CAF50; /* Green */
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #45a049; /* Darker green */
        }

    .btn-secondary {
        background-color: #6c757d; /* Gray */
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Darker gray */
        }
</style>