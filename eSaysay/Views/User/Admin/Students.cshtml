@using Microsoft.AspNetCore.Identity;

@model List<IdentityUser>

@{
    ViewData["Title"] = "Registered Students";
}
<main class="admin-students">
    @await Html.PartialAsync("_AdminSidebar")

        <header class="admin-students-header">
            <h2>Registered Students</h2>
        </header>

    @if (Model != null && Model.Count > 0)
    {
        <div class="students-content">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Email</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Email</td>
                            <td>
                                <!-- Edit Button (Triggers Modal) -->
                                <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@student.Id">
                                    Edit
                                </button>

                                <!-- Archive Button (Triggers Modal) -->
                                <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#archiveModal-@student.Id">
                                    Archive
                                </button>
                            </td>
                        </tr>

                        <!-- Edit Modal -->
                        <div class="modal fade" id="editModal-@student.Id" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit Student</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <form asp-action="EditStudent" method="post">
                                        <div class="modal-body">
                                            <input type="hidden" name="Id" value="@student.Id" />
                                            <div class="mb-3">
                                                <label class="form-label">Email</label>
                                                <input type="email" name="Email" class="form-control" value="@student.Email" required />
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Archive Modal -->
                        <div class="modal fade" id="archiveModal-@student.Id" tabindex="-1" aria-labelledby="archiveModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Archive Student</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to archive <strong>@student.Email</strong>?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-action="ArchiveStudent" method="post">
                                            <input type="hidden" name="Id" value="@student.Id" />
                                            <button type="submit" class="btn btn-danger">Archive</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
        
    }
    else
    {
        <p>No students found.</p>
    }
</main>