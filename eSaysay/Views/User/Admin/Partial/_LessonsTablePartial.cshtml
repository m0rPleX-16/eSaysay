@using eSaysay.Models.Entities;
@model List<Lesson>

<div class="table-lessons" id="lessons-content">
    <table class="table table-lessons-content">
        <thead>
            <tr>
                <th class="col-4">Title</th>
                <th class ="col-2">Lesson Type</th>
                <th class="col-2">Difficulty</th>
                <th class="col-2">Language</th>
                <th class="col-1">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in Model.Where(l => !l.IsArchived)) // Show only non-archived lessons
            {
                <tr>
                    <td>@lesson.Title</td>
                    <td>@lesson.LessonType</td>
                    <td>@lesson.DifficultyLevel</td>
                    <td>@lesson.Language.LanguageName</td>
                    <td class="d-flex justify-content-between">
                        <button class="btn btn-lessons-edit btn-sm" data-bs-toggle="modal" data-bs-target="#editLessonModal-@lesson.LessonID" >
                            <span class="material-symbols-rounded">edit</span>
                        </button>
                        <button class="btn btn-lessons-archive btn-sm" data-bs-toggle="modal" data-bs-target="#archiveLessonModal-@lesson.LessonID">
                            <span class="material-symbols-rounded">archive</span>
                        </button>
                    </td>
                </tr>

                <!-- Edit Lesson Modal -->
                <div class="modal fade" id="editLessonModal-@lesson.LessonID" tabindex="-1" aria-labelledby="editLessonModalLabel-@lesson.LessonID" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editLessonModalLabel-@lesson.LessonID">Edit Lesson</h5>
                                <button type="button"  class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form method="post" action="/Admin/EditLesson">
                                <div class="modal-body">
                                
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="LessonID" value="@lesson.LessonID" />
                                        <div class="mb-3">
                                            <label class="form-label">Title</label>
                                        <input type="text" maxlength="150" class="form-control" name="Title" value="@lesson.Title" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Language</label>
                                            <select class="form-control" name="LanguageID" required>
                                                @foreach (var language in ViewBag.Languages)
                                                {
                                                    <option value="@language.LanguageID" selected="@(lesson.LanguageID == language.LanguageID ? "selected" : null)">
                                                        @language.LanguageName
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Lesson Type</label>
                                            <select class="form-control" name="LessonType" required>
                                                <option value="Video" selected="@(lesson.LessonType == "Video")">Video</option>
                                                <option value="Text" selected="@(lesson.LessonType == "Text")">Text</option>
                                                <option value="Quiz" selected="@(lesson.LessonType == "Quiz")">Quiz</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Difficulty Level</label>
                                            <select class="form-control" name="DifficultyLevel" required>
                                                <option value="Beginner" selected="@(lesson.DifficultyLevel == "Beginner")">Beginner</option>
                                                <option value="Intermediate" selected="@(lesson.DifficultyLevel == "Intermediate")">Intermediate</option>
                                                <option value="Advanced" selected="@(lesson.DifficultyLevel == "Advanced")">Advanced</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Description</label>
                                        <textarea class="form-control" maxlength="200" name="Description">@lesson.Description</textarea>
                                        </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Archive Lesson Modal -->
                <div class="modal fade" id="archiveLessonModal-@lesson.LessonID" tabindex="-1" aria-labelledby="archiveLessonModalLabel-@lesson.LessonID" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Archive Lesson</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to archive the lesson <strong>@lesson.Title</strong>?</p>
                            </div>
                            <div class="modal-footer">
                                <form method="post" action="/Admin/ArchiveLesson">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="LessonID" value="@lesson.LessonID" />
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Archive</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>

    <!-- Pagination Controls -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="lessons-pagination">
            <ul class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link pagination-link" href="#" data-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>
                }

                @{
                    int totalPages = ViewBag.TotalPages;
                    int currentPage = ViewBag.CurrentPage;
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, currentPage + 2);

                    // Ensure there are always exactly 5 links displayed
                    if (endPage - startPage + 1 < 5)
                    {
                        if (startPage == 1)
                        {
                            endPage = Math.Min(5, totalPages);
                        }
                        else if (endPage == totalPages)
                        {
                            startPage = Math.Max(1, totalPages - 4);
                        }
                    }
                }

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link pagination-link" href="#" data-page="1">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link pagination-link" href="#" data-page="@i">@i</a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    @if (endPage < totalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link pagination-link" href="#" data-page="@totalPages">@totalPages</a>
                    </li>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link pagination-link" href="#" data-page="@(ViewBag.CurrentPage + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
