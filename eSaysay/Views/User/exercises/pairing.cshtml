@{
    ViewData["Title"] = "Pairing Exercise";
    ViewData["PageClass"] = "pairing-page";
}
<div class="container pairing-exercise">

    <div class="header-pairing">
        <a asp-controller="Dashboard" asp-action="exitPairingExercise" class="btn close-button-pairing">
            <span class="material-symbols-rounded">
                close
            </span>
        </a>
        <div class="progress-bar">
            <div class="progress-bar-inner"></div>
        </div>
    </div>

    <div class="title title-question">
        <!-- pairing QUESTIONS -->
        Complete the matching pairs
    </div>
</div>

<!-- Two columns with five rows each -->
<div class="pairing-answer">
    <div class="answer-column">
        <!-- First column -->
        <button onclick="selectAnswer(1)">Answer 1</button>
        <button onclick="selectAnswer(2)">Answer 2</button>
        <button onclick="selectAnswer(3)">Answer 3</button>
        <button onclick="selectAnswer(4)">Answer 4</button>
        <button onclick="selectAnswer(5)">Answer 5</button>
    </div>
    <div class="answer-column">
        <!-- Second column -->
        <button onclick="selectAnswer(6)">Answer 6</button>
        <button onclick="selectAnswer(7)">Answer 7</button>
        <button onclick="selectAnswer(8)">Answer 8</button>
        <button onclick="selectAnswer(9)">Answer 9</button>
        <button onclick="selectAnswer(10)">Answer 10</button>
    </div>
</div>

<div class="footer">
    <button class="skip" onclick="skip()">Skip</button>
    <button class="check" onclick="checkAnswer()">Check</button>
</div>