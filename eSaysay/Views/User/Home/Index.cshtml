<!-- Courses Section -->
<!-- ======= Courses Section ======= -->
<section id="courses" class="courses section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Courses</h2>
        <p>Popular Language Courses</p>
    </div><!-- End Section Title -->

    <div class="container">
        <div class="row">
            <!-- Course 1 -->
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                <div class="course-item">
                    <img src="~/assets/img/course-1.jpg" class="img-fluid" alt="Basic English">
                    <div class="course-content">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <p class="category">English</p>
                            <p class="price">Free</p>
                        </div>
                        <h3><a asp-controller="Courses" asp-action="Details" asp-route-id="1">Basic English</a></h3>
                        <p class="description">Learn fundamental English skills, including grammar and pronunciation.</p>
                        <div class="trainer d-flex justify-content-between align-items-center">
                            <div class="trainer-profile d-flex align-items-center">
                                <img src="~/assets/img/trainers/trainer-1.jpg" class="img-fluid" alt="Trainer">
                                <a href="" class="trainer-link">John Doe</a>
                            </div>
                            <div class="trainer-rank d-flex align-items-center">
                                <i class="bi bi-person user-icon"></i>&nbsp;120
                                &nbsp;&nbsp;
                                <i class="bi bi-heart heart-icon"></i>&nbsp;90
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End Course Item-->
            <!-- Course 2 -->
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-md-0" data-aos="zoom-in" data-aos-delay="200">
                <div class="course-item">
                    <img src="~/assets/img/course-2.jpg" class="img-fluid" alt="Spanish Course">
                    <div class="course-content">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <p class="category">Spanish</p>
                            <p class="price">$49</p>
                        </div>
                        <h3><a asp-controller="Courses" asp-action="Details" asp-route-id="2">Spanish for Beginners</a></h3>
                        <p class="description">Learn essential Spanish phrases and improve your conversational skills.</p>
                        <div class="trainer d-flex justify-content-between align-items-center">
                            <div class="trainer-profile d-flex align-items-center">
                                <img src="~/assets/img/trainers/trainer-2.jpg" class="img-fluid" alt="Trainer">
                                <a href="" class="trainer-link">Maria Lopez</a>
                            </div>
                            <div class="trainer-rank d-flex align-items-center">
                                <i class="bi bi-person user-icon"></i>&nbsp;85
                                &nbsp;&nbsp;
                                <i class="bi bi-heart heart-icon"></i>&nbsp;72
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End Course Item-->
            <!-- Course 3 -->
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch mt-4 mt-lg-0" data-aos="zoom-in" data-aos-delay="300">
                <div class="course-item">
                    <img src="~/assets/img/course-3.jpg" class="img-fluid" alt="Japanese Course">
                    <div class="course-content">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <p class="category">Japanese</p>
                            <p class="price">$99</p>
                        </div>
                        <h3><a asp-controller="Courses" asp-action="Details" asp-route-id="3">Japanese Basics</a></h3>
                        <p class="description">Master essential Japanese characters, grammar, and phrases.</p>
                        <div class="trainer d-flex justify-content-between align-items-center">
                            <div class="trainer-profile d-flex align-items-center">
                                <img src="~/assets/img/trainers/trainer-3.jpg" class="img-fluid" alt="Trainer">
                                <a href="" class="trainer-link">Hiro Tanaka</a>
                            </div>
                            <div class="trainer-rank d-flex align-items-center">
                                <i class="bi bi-person user-icon"></i>&nbsp;60
                                &nbsp;&nbsp;
                                <i class="bi bi-heart heart-icon"></i>&nbsp;50
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End Course Item-->

        </div>
    </div>

</section><!-- /Courses Section -->
