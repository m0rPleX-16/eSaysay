@page
@model eSaysay.Areas.Identity.Pages.Account.AdminLoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row w-100">
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center text-white rounded-start" style="background-color: #A75F37;">
            <div class="text-center">
                <h1 class="fw-bold text-white">Welcome Back!</h1>
                <p class="lead">Log in to continue learning with eSaysay.</p>
            </div>
        </div>
        <div class="col-lg-6 col-md-8 mx-auto p-4 shadow rounded bg-white" style="font-family: var(--default-font);">
            <div class="text-center mb-4">
                <h2 class="fw-bold" style="color: var(--heading-color);">Login</h2>
                <p>Access your account</p>
            </div>
            <form id="account" method="post" asp-route-returnUrl="@Url.Action("Index","Admin")">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" required />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" required />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2" style="background: var(--accent-color); border: none;">Log in</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

}
